+	case DRM_FORMAT_XVUY8888:
+		fallthrough;
+	case DRM_FORMAT_Y8:
+		fallthrough;
+	case DRM_FORMAT_XVUY2101010:
+		fallthrough;
+	case DRM_FORMAT_Y10:
+		config->misc0 |= XDPTX_MISC0_YCRCB444_MASK;
