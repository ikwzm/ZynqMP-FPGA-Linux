+      - description: Fixed Rate Link clock
+      - description: AXI4-Stream Video clock
+
+  clock-names:
+    items:
+      - const: s_axi_cpu_aclk
+      - const: link_clk
+      - const: video_clk
+      - const: frl_clk
+      - const: s_axis_video_aclk
+
+  phys:
