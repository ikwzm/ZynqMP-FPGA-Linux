+
+	xlnx_dp_write(dp->dp_base, XDPTX_ENABLE_REG, 0);
+	drm_dp_aux_unregister(&dp->aux);
+	xlnx_dp_exit_phy(dp);
+	component_del(&pdev->dev, &xlnx_dp_component_ops);
+
+	return 0;
