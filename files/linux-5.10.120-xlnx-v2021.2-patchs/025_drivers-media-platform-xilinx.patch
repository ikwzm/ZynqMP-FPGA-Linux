+MODULE_DEVICE_TABLE(of, xhdmirx_of_id_table);
+
+static struct platform_driver xhdmirx_driver = {
+	.driver = {
+		.name		= "xlnx-hdmi21rxss",
+		.of_match_table	= xhdmirx_of_id_table,
+	},
+	.probe			= xhdmirx_probe,
+	.remove			= xhdmirx_remove,
+};
